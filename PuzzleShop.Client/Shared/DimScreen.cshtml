@using Microsoft.AspNetCore.Blazor.Components
<!-- dimming the page while prcessing -->
<div class="cover @Processing"></div>

<style>
    .cover {
        background: rgba(150, 150, 150, 0.5);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1001;
    }

    .span-link {
        cursor: pointer;
    }

        .span-link:hover {
            text-decoration: underline;
        }
</style>

@functions {
[Parameter]
private string Processing { get; set; }
}
