@inherits PuzzleShop.Client.Pages.Home.Logic.FeatureProductsLogic

@if (ToyList != null)
{
    <section id="featured-products" class="page-section row">
        <h2 class="section-title">
            <span>Featured Products</span>
        </h2>
        @foreach (var toy in ToyList)
        {
            <div class="col-sm-4 product-holder">
                <form class="custom" onsubmit="return false">
                    <div class="product-item text-center">
                        <a class="product-img" href="/toyDetail/@toy._id">
                            <img class="img-responsive" src="@toy.PhotoURL" alt="@toy.Name"/>
                        </a>
                        <h3 class="product-title">
                            <a href="/toyDetail/@toy._id">@toy.Name</a>
                        </h3>
                        <div class="h4 product-price">
                            <span>$@toy.Price.ToString("N") </span>
                        </div>
                        <div class="buttons-holder">
                            <a class="btn btn-default btn-quick-view hidden-xs" rel="tooltip" title="Quick View" href="/toyDetail/@toy._id">
                                <i class="fa fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        }

    </section>
}