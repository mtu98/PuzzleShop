@page "/checkout-02"
@inherits PuzzleShop.Client.Pages.Checkout.Logic.CheckoutShippingMethodLogic

<div id="banner" class="jumbotron row">
    <h1>Checkout</h1>
</div>

<section id="checkout" class="page-section row">
    <div id="checkout-progress">
        <ul class="breadcrumb list-inline checkout-progress">
            <li class="active"><a href="/checkout-01">1. Billing Address</a></li>
            <li class="active">2. Shipping Method</li>
            <li>3. Pay</li>
        </ul>

    </div>

    <div class="col-sm-12 col-md-9">

        <div id="checkout-page">
            <form class="custom">
                <h2>Shipping Method</h2>

                <input type="hidden" value="" name="shippingMethod">
                <table class="table table-bordered" id="shipping-methods">
                    <tbody>
                        <tr>
                            <td>
                                <!-- The shipping method radio button clicks are handled in the main.js -->
                                <input class="custom-radio" name="shippingMethod" value="3" checked="checked" type="radio" id="option3">

                                <label for="option3" class="choice-title h6">
                                    Table Rate
                                </label>

                            </td>
                            <td class="narrow">
                                <span class="h3">
                                    $5.00
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="clearfix">
                    <a class="btn btn-default btn-lg btn-checkout-step pull-left" href="/checkout-01"><i class="fa fa-arrow-left"></i><span class="hidden-sm">Previous Step</span></a>
                    <a class="btn btn-primary btn-lg btn-checkout-step pull-right" href="/checkout-03"><span class="hidden-sm">Next Step</span><i class="fa fa-arrow-right"></i></a>
                </div>
                <input type="hidden" name="step" value="shipping_method,review">
                <input type="hidden" name="nextStep" value="pay">
            </form>
        </div>

    </div>

    <div id="cart-totals" class="col-sm-12 col-md-3">
        <form class="custom" method="post" action="/checkout">
            <div id="cart-summary">
                <h3 class="cart-summary-title">Order Summary</h3>
                <ul class="price-list list-group">
                    <li class="list-group-item">Subtotal: <span class="badge">$@GetPriceOfCart().ToString("N")</span></li>
                    <li class="list-group-item order-shipping">Shipping: <span class="badge">$5.00</span></li>
                    <li class="list-group-item">Tax: <span class="badge">$0.00</span></li>
                    <li class="list-group-item order-total h4 clearfix"><span>Total:</span> <span class="badge">$@((GetPriceOfCart() + 5).ToString("N"))</span></li>
                </ul>

            </div>
        </form>
    </div>

</section>